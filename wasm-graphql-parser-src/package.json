{
  "name": "wasm-graphql-parser",
  "description": "Just a basic graphql parser that uses Apollo's rust parser and custom logic to extract all info from a schema",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "cp-types-dev": "cat ./typescript-types.ts >> ../packages/wasm-graphql-parser/wasm_graphql_parser.d.ts",
    "cp-types-prod": "cat ./typescript-types.ts >> ./pkg/wasm_graphql_parser.d.ts",
    "gen-npmrc": "ts-node ./gen-npmrc.ts",
    "test": "cargo test",
    "check": "cargo check",
    "build": "cargo build",
    "compile-dev-node": "rimraf ../packages/wasm-graphql-parser && wasm-pack build --target nodejs --out-dir ../packages/wasm-graphql-parser -- --offline",
    "compile-dev-bundler": "rimraf ../packages/wasm-graphql-parser && wasm-pack build --target bundler --out-dir ../packages/wasm-graphql-parser -- --offline",
    "compile-dev-web": "rimraf ../packages/wasm-graphql-parser && wasm-pack build --target web --out-dir ../packages/wasm-graphql-parser -- --offline",
    "compile-dev": "yarn && yarn compile-dev-node && yarn cp-types-dev",
    "compile-prod-node": "rimraf ./pkg && wasm-pack build --target nodejs --out-dir ./pkg --release -- --offline",
    "compile-prod-bundler": "rimraf ./pkg && wasm-pack build --target bundler --out-dir ./pkg --release -- --offline",
    "compile-prod-web": "rimraf ./pkg && wasm-pack build --target web --out-dir ./pkg --release -- --offline",
    "compile-prod": "yarn && yarn compile-prod-node && yarn cp-types-prod && yarn gen-npmrc",
    "deploy": "yarn && yarn compile-prod && cd pkg && wasm-pack publish -- --userconfig .npmrc --access public --registry https://registry.npmjs.org/:_authToken=${NPM_TOKEN}"
  },
  "dependencies": {},
  "author": "Luis F. Domenech Ortiz <luisfabiandomenech@gmail.com>",
  "homepage": "https://github.com/Luis-Domenech/wasm-graphql-parser",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luis-Domenech/wasm-graphql-parser"
  },
  "keywords": [
    "rust",
    "web assembly",
    "wasm",
    "graphql",
    "parser",
    "schema",
    "typescript"
  ],
  "devDependencies": {
    "rimraf": "^3.0.2"
  }
}
